<!DOCTYPE html>
<html>
  <head>
    <title>Kaopita36389</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
		<link rel="stylesheet" href="plans.scss">
  </head>

  <body>
		<header class="header">
      <div class="header-btns">
        <h1 class="header-logo"><%= link_to 'カオピタっ', plans_path %></h1>
        <% if user_signed_in? %>
          <div>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'header-btn' %>
          </div>
        <% else %>
          <div>
            <%= link_to "ログイン", new_user_session_path, class: 'header-btn' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'header-btn' %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
