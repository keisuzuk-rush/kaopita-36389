<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1>新規登録</h1>
			<div class="box-name">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"例) 山田太郎"  %>
      </div>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
      </div>
			<div class="box-company_number">
        <%= f.label :company_number, "社員番号" %><br />
        <%= f.text_field :company_number, autofocus: true, autocomplete: "company_number", placeholder:"社員番号を入力して下さい" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"6文字以上の半角英数字" %>
				<p class="password-conditions">※英字と数字の両方を含めて設定してください</p>
      </div>
			<div class="box-password">
				<div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード確認" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"同じパスワードを入力して下さい" %>
			</div>
      <div class="box-login">
        <%= f.submit "登録" %>
        <% if devise_mapping.rememberable? %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>